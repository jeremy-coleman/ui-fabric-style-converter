{
    "compilerOptions": {
        "outDir": "./lib",
        "baseUrl": "./src",
        "rootDir": "./src",
        "moduleResolution": "node",
        "target": "esnext",
        "module":"esnext",
        "jsx": "react",
        "experimentalDecorators": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom","scripthost","esnext"],
        "skipLibCheck": true,
        "removeComments": true
    },
    "include":["src"]
}